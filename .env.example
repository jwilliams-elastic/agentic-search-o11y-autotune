# ELASTIC PROPERTIES
ELASTIC_URL=YOUR_ELASTIC_URL
ELASTIC_API_KEY=YOUR_ELASTIC_API_KEY
MODEL_ID=.multilingual-e5-small_linux-x86_64
INFERENCE_ID=e5-endpoint
INDEX_NAME=properties

# ./data/properties.jsonl - needs to be added as absolute path
DATA_FILE=FULL_PATH_TO_DATAFILE

# ./search_templates/ - needs to be added as absolute path
SEARCH_TEMPLATES_DIR=FULL_PATH_TO_SEARCH_TEMPLATES_FOLDER

# ./models/ - needs to be added as absolute path

# LTR CONFIGURATION (Agent-Driven Learning-to-Rank)
# Minimum data requirements for model training
LTR_MIN_INTERACTIONS=100
LTR_MIN_SESSIONS=50
LTR_RETRAIN_INTERVAL_HOURS=24
LTR_MAX_TRIALS=5
LTR_OPTIMIZATION_METRIC=ndcg@10
LTR_MIN_IMPROVEMENT=0.01
LTR_VALIDATION_SPLIT=0.2

# ./models/ - needs to be added as absolute path
LTR_MODEL_DIR=FULL_PATH_TO_SEARCH_MODELS_FOLDER
LTR_PERFORMANCE_LOG=./logs/ltr_performance.log
LTR_API_PORT=8080
LTR_PY_SCRIPT=FULL_PATH_TO_LTR_SCRIPT

# DATA STREAM CONFIGURATION (Unified with colleague's agentless logging)
# All LTR training data comes from the unified data stream
ELASTIC_LOGS_DATA_STREAM=logs-agentic-search-o11y-autotune.events1


