# ELASTIC PROPERTIES
PROJECT_HOME=YOUR_PROJECT_HOME_ABSOLUTE_PATH
ELASTIC_URL=YOUR_ELASTIC_URL
ELASTIC_API_KEY=YOUR_ELASTIC_API_KEY

MODEL_ID=.multilingual-e5-small_linux-x86_64
INFERENCE_ID=e5-endpoint
INDEX_NAME=properties

DATA_FILE=${PROJECT_HOME}/data/properties.jsonl
SEARCH_TEMPLATES_DIR=${PROJECT_HOME}/search_templates
LTR_PY_SCRIPT=${PROJECT_HOME}/src/python/properties-learn-to-rank.py

# LTR CONFIGURATION (Agent-Driven Learning-to-Rank)
# Minimum data requirements for model training
LTR_MIN_INTERACTIONS=10
LTR_MIN_SESSIONS=1
LTR_MAX_TRIALS=5
LTR_OPTIMIZATION_METRIC=ndcg@10
LTR_MIN_IMPROVEMENT=0.01
LTR_VALIDATION_SPLIT=0.2
LTR_MODEL_DIR=${PROJECT_HOME}/models
LTR_PERFORMANCE_LOG=${PROJECT_HOME}/logs/ltr_performance.log
LTR_API_PORT=8080

ELASTIC_LOGS_DATA_STREAM=logs-agentic-search-o11y-autotune.events


